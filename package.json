{
    "name": "dae",
    "dependencies": {
        "dotenv-cli": "latest",
        "eslint": "8.29.0",
        "prettier": "2.8.8",
        "turbo": "1.9.3"
    },
    "devDependencies": {
        "husky": "8.0.3",
        "lint-staged": "13.2.2",
        "rome": "12.1.3",
        "syncpack": "10.1.0"
    },
    "packageManager": "pnpm@7.15.0",
    "private": true,
    "scripts": {
        "build": "dotenv -- turbo run build",
        "publish": "dotenv -- turbo run publish",
        "clean": "turbo run clean && rm -rf node_modules",
        "dev": "dotenv -- turbo run dev --no-cache --parallel --continue",
        "format": "rome format .",
        "format:fix": "rome format . --write",
        "check": "rome check .",
        "check:fix": "rome check . --apply",
        "start": "dotenv -- turbo run start",
        "prepare": "husky install",
        "db:studio": "prisma studio --schema=./packages/database/prisma/schema.prisma"
    }
}