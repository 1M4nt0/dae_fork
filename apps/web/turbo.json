{
    "extends": [
        "//"
    ],
    "pipeline": {
        "generate": {
            "outputs": [
                ".mesh/**"
            ],
            "dependsOn": [],
            "env": [],
            "cache": true
        },
        "build": {
            "outputs": [
                ".next/**"
            ],
            "dependsOn": [
                "^build",
                "generate"
            ],
            "env": [
                "NEXTAUTH_URL",
                "NEXTAUTH_SECRET",
                "NEXT_PUBLIC_FACTORY_CONTRACT_ADDRESS",
                "API_URL"
            ],
            "cache": true
        },
        "dev": {
            "outputs": [
                ".next/**"
            ],
            "dependsOn": [
                "^build",
                "generate"
            ],
            "env": [
                "NEXTAUTH_URL",
                "NEXTAUTH_SECRET",
                "NEXT_PUBLIC_FACTORY_CONTRACT_ADDRESS",
                "API_URL"
            ],
            "persistent": true,
            "cache": false
        },
        "start": {
            "dependsOn": [
                "^build"
            ],
            "env": [
                "NEXTAUTH_URL",
                "NEXTAUTH_SECRET",
                "NEXT_PUBLIC_FACTORY_CONTRACT_ADDRESS"
            ],
            "cache": true
        },
        "check": {
            "dependsOn": [
                "^build",
                "generate"
            ],
            "cache": false
        },
        "sitemap": {
            "outputs": [
                "public/sitemap.xml",
                "public/sitemap-*.xml",
                "public/robots.txt"
            ],
            "dependsOn": [
                "build"
            ],
            "cache": true
        }
    }
}